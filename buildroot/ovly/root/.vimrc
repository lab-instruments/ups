" Simple VIM Configuration for UPS Editing
set nocompatible                  " Disable VI Compatibility
syntax on                         " Turn on Syntax Highlighting
set backspace=indent,eol,start    " Fix DEL/BKSPC
set number                        " Show Line Numbers
set wrap                          " Wrap Lines
set encoding=utf-8                " Set Encoding to UTF-8
set mouse=a                       " Enable Mouse Support
set wildmenu                      " Visual Autocomplete for Command Menu
set lazyredraw                    " Redraw Screen Only When we Need
set showmatch                     " Highlight Matching Parentheses
set laststatus=2                  " Always Show Statusline
set ruler                         " Show Line and Column Number on Statusline
set visualbell                    " Blink Cursor on Error
set tabstop=4                     " 4 Space Tabs
set expandtab                     " Use Spaces Instead of Tabs
set shiftwidth=4                  " 4 Space Tabs
set softtabstop=4                 " 4 Space Tabs
set autoindent                    " Enable Auto-Indent
set smartindent                   " Enable Smart Indent
colorscheme murphy                " Not Crappy Colorscheme
